<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.emo_tunes.javafxapp.SongDetailsPageController"
            style="-fx-background-color: linear-gradient(to bottom right, #232526, #414345);"
            prefWidth="600" prefHeight="500">

    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
          AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">

        <ImageView fx:id="coverImage" fitHeight="200" fitWidth="200"
                   style="-fx-effect: dropshadow(gaussian, black, 10, 0.5, 0, 0);" />

        <Label fx:id="songTitle" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" />
        <Label fx:id="artistName" style="-fx-text-fill: #E0E0E0; -fx-font-size: 16px;" />
        <Label fx:id="releaseDate" style="-fx-text-fill: #B0B0B0; -fx-font-size: 14px;" />
        <Label fx:id="durationLabel" style="-fx-text-fill: #B0B0B0; -fx-font-size: 14px;" />

        <HBox alignment="CENTER" spacing="15">
            <Button fx:id="openSpotifyBtn" text="Open in Browser" style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 20;" />
            <Button fx:id="openSpotifyAppBtn" text="Open in Spotify App" style="-fx-background-color: #1DB954; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 20;" />
        </HBox>

        <Button fx:id="backBtn" text="← Back"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-underline: true;" />
    </VBox>
</AnchorPane>
