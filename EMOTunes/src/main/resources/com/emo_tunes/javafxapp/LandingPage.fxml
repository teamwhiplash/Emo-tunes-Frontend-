<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane fx:controller="com.emo_tunes.javafxapp.LandingPageController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="1200" prefHeight="800"
            stylesheets="@landingpage.css">

    <!-- Top Navbar -->
    <top>
        <HBox fx:id="navbar" alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>

            <ImageView fx:id="appLogo" fitHeight="60" fitWidth="60" />
            <Label fx:id="logoText" text="EMOTunes">
                <font><Font name="Segoe UI Bold" size="28"/></font>
            </Label>
            <HBox HBox.hgrow="ALWAYS"/>
            <HBox fx:id="searchBar" alignment="CENTER_LEFT" spacing="0" style="-fx-padding: 0;">
                <!-- Search Field -->
                <TextField fx:id="searchField"
                           promptText="🔍 Search for songs, playlists..."
                           prefWidth="350"
                           styleClass="search-field"/>

                <!-- Search Button -->
                <Button fx:id="searchButton" text="🔍" styleClass="search-button"/>
            </HBox>
            <HBox HBox.hgrow="ALWAYS"/>
            <VBox alignment="CENTER">
                <Label fx:id="profileIcon"/>
                <Label fx:id="profileName"/>
            </VBox>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" alignment="TOP_CENTER" spacing="20" prefWidth="300">
            <padding>
                <Insets top="30" right="10" bottom="10" left="10"/>
            </padding>
            <Label fx:id="sidebarPlaylists" text="Playlists" onMouseClicked="#handleSidebarPlaylistsClick" />
            <Label fx:id="sidebarEmolists" text="EmoLists" onMouseClicked="#handleSidebarEmoListsClick"/>
            <Label fx:id="sidebarLogout" text="Logout"/>
            <VBox VBox.vgrow="ALWAYS"/>
            <StackPane fx:id="insightContainer" styleClass="insight-container">
                <VBox fx:id="insightBox" spacing="4" styleClass="insight-box" alignment="TOP_LEFT">
                    <Label fx:id="insightTitle" text="How are you feeling today?" styleClass="insight-title" wrapText="true" maxWidth="Infinity"/>
                    <Label fx:id="insightSubtitle" text="Pick a mood and we’ll match the perfect tunes!" styleClass="insight-subtitle" wrapText="true" maxWidth="Infinity"/>
                </VBox>
            </StackPane>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <StackPane fx:id="mainContentPane" alignment="CENTER">
            <VBox alignment="CENTER" fx:id="container" spacing="60">
                <padding><Insets top="30" right="30" bottom="30" left="30"/></padding>

                <Label fx:id="titleLabel" text="Welcome to EMOTunes!">
                    <font><Font name="Segoe UI Bold" size="40"/></font>
                </Label>

                <HBox alignment="CENTER" spacing="50">
                    <VBox fx:id="happyBox" alignment="CENTER" prefWidth="200" prefHeight="200"
                          onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit"
                          onMouseClicked="#handleEmotionClick">
                        <Label text="Happy"><font><Font name="Segoe UI" size="24"/></font></Label>
                    </VBox>

                    <VBox fx:id="loveBox" alignment="CENTER" prefWidth="200" prefHeight="200"
                          onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit"
                          onMouseClicked="#handleEmotionClick">
                        <Label text="Love"><font><Font name="Segoe UI" size="24"/></font></Label>
                    </VBox>

                    <VBox fx:id="upliftBox" alignment="CENTER" prefWidth="200" prefHeight="200"
                          onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit"
                          onMouseClicked="#handleEmotionClick">
                        <Label text="Uplift"><font><Font name="Segoe UI" size="24"/></font></Label>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER" spacing="50">
                    <VBox fx:id="sadBox" alignment="CENTER" prefWidth="200" prefHeight="200"
                          onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit"
                          onMouseClicked="#handleEmotionClick">
                        <Label text="Sad"><font><Font name="Segoe UI" size="24"/></font></Label>
                    </VBox>

                    <VBox fx:id="rageBox" alignment="CENTER" prefWidth="200" prefHeight="200"
                          onMouseEntered="#handleHoverEnter" onMouseExited="#handleHoverExit"
                          onMouseClicked="#handleEmotionClick">
                        <Label text="Rage"><font><Font name="Segoe UI" size="24"/></font></Label>
                    </VBox>
                </HBox>
            </VBox>

            <!-- Emotion Popup Overlay -->
            <VBox fx:id="emotionPopup" visible="false" opacity="0"
                  style="-fx-background-color: rgba(30,30,30,0.95); -fx-padding: 20; -fx-background-radius: 15;"
                  alignment="TOP_CENTER" spacing="10" prefWidth="600" prefHeight="500">
                <Label fx:id="popupTitle" text="Songs" style="-fx-text-fill: #FFFFFF; -fx-font-size: 24px;"/>
                <ListView fx:id="popupListView" prefWidth="560" prefHeight="400"/>
                <Label text="Close" fx:id="closePopup" style="-fx-text-fill: #FFD700; -fx-cursor: hand;"/>
            </VBox>
            <AnchorPane fx:id="resultsPlaceholder" visible="false" opacity="0"/>
        </StackPane>
    </center>
</BorderPane>
