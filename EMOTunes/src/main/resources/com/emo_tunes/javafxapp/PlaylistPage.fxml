<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane fx:controller="com.emo_tunes.javafxapp.PlaylistPageController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@landingpage.css"
            prefWidth="800" prefHeight="600">

    <center>
        <VBox spacing="20" alignment="TOP_LEFT" style="-fx-padding: 20;">

            <!-- Header Row -->
            <HBox alignment="CENTER" spacing="20">
                <Label text="Your Spotify Playlists" styleClass="playlist-title" />
                <Region HBox.hgrow="ALWAYS"/>
                <!-- Create Playlist Button -->
                <Button fx:id="createPlaylistBtn"
                        text="+ Create Playlist"
                        styleClass="create-playlist-btn"
                        onAction="#handleCreatePlaylist" />
            </HBox>

            <!-- Scrollable Playlist List -->
            <ScrollPane fitToWidth="true"
                        style="-fx-background-color: transparent; -fx-pref-height: 550;">
                <VBox fx:id="playlistContainer" spacing="15">
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>
                </VBox>
            </ScrollPane>
        </VBox>
    </center>
</BorderPane>
